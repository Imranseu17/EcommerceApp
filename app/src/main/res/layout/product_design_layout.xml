<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="280dp">

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="180dp"
            android:layout_height="170dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/dkny">

            <LinearLayout
                android:id="@+id/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/product_parcentege_bg"
                android:orientation="vertical"
                tools:ignore="ContentDescription">

                <TextView
                    android:id="@+id/percerntege"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/calibri"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/some_id_parcentege"
                    android:textAppearance="@style/some_id_parcentege"
                    android:textSize="12sp" />


            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-24dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/favorite_shape"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/favoriteImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/unchecked_vector" />

        </LinearLayout>

        <RatingBar
            android:id="@+id/productRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative_layout"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBar" />

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productRating"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/calibri"
            android:maxLines="2"
            android:text="@string/dkny_t_shir"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/bdt_19"
                android:textAllCaps="true"
                android:textAppearance="@style/bdt_19"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/calibri"
                android:gravity="center"
                android:maxLines="2"
                android:text="@string/bdt69"
                android:textAllCaps="true"
                android:textAppearance="@style/bdt69"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>