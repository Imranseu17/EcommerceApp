<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_top_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profile_recentengle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/md_imtiaj_a"
                    android:textAppearance="@style/md_imtiaj_a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/add_mobile_"
                    android:textAppearance="@style/add_mobile_" />


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/action_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:src="@drawable/ic_baseline_settings_24" />


    </RelativeLayout>



   <LinearLayout
       android:id="@+id/number_of_item"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/_10sdp"
       android:layout_marginStart="@dimen/_10sdp"
       android:layout_marginEnd="@dimen/_10sdp"
       android:orientation="horizontal"
       android:layout_below="@+id/top_layout">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="45dp"
           android:text="@string/some_id_10"
           android:textAppearance="@style/some_id_10"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="75dp"
           android:text="32"
           android:textAppearance="@style/some_id_10"
           />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="82dp"
           android:text="32"
           android:textAppearance="@style/some_id_10"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="80dp"
           android:text="32"
           android:textAppearance="@style/some_id_10"
           />
   </LinearLayout>

    <LinearLayout
        android:id="@+id/number_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/number_of_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:text="@string/my_wishlist"
            android:textAppearance="@style/my_wishlist"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/follwed_sto"
            android:textAppearance="@style/follwed_sto"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/recently_vi"
            android:textAppearance="@style/recently_vi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@string/voucher"
            android:textAppearance="@style/voucher"
            />



    </LinearLayout>

    <ImageView
        android:id="@+id/checked_line"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/line_checked" />

    <ImageView
        android:id="@+id/underline"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checked_line"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/underline_number_text" />

    <TextView
        android:id="@+id/my_order"
        android:layout_width="84dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="23dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:text="@string/my_order"
        android:textStyle="bold"
        android:fontFamily="@font/calibri"
        android:textAppearance="@style/my_order"
        android:gravity="top"
        />

    <LinearLayout
        android:id="@+id/order_of_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/my_order">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/wallet"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/cargo"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/delivery_worker"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/sms"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/exchange"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_of_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/order_of_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="To Pay"
            android:textAppearance="@style/my_wishlist"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:text="To Ship"
            android:textAppearance="@style/follwed_sto"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="To Receive"
            android:textAppearance="@style/recently_vi"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="To Review"
            android:textAppearance="@style/voucher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Return &amp; \nCancellations"
            android:textAppearance="@style/voucher"
            />



    </LinearLayout>

    <ImageView
        android:id="@+id/checked_line_order_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/order_of_item_text"
        android:src="@drawable/line_checked" />

    <ImageView
        android:id="@+id/underline_checked_two"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checked_line_order_text"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/underline_number_text" />

    <LinearLayout
        android:id="@+id/gift_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/underline_checked_two"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="20dp"
            android:background="@drawable/coins_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/coin_icon_bg">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/dollar"/>

            </LinearLayout>

            <TextView
                android:id="@+id/coins"
                android:layout_width="64.6dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:fontFamily="@font/calibri"
                android:layout_marginStart="20dp"
                android:text="@string/coins"
                android:textAppearance="@style/coins"
                android:gravity="top"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="20dp"
            android:background="@drawable/coins_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/gift_bg">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/gift_icon"/>

            </LinearLayout>

            <TextView
                android:id="@+id/new_user_fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/calibri"
                android:layout_marginStart="20dp"
                android:text="@string/new_user_fr"
                android:textAppearance="@style/new_user_gift"
                android:gravity="top"
                />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/underline_gift"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gift_layout"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/underline_number_text" />

    <TextView
        android:id="@+id/my_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/underline_gift"
        android:text="@string/my_service"
        android:textAppearance="@style/my_service"
        android:gravity="top"
        />

    <LinearLayout
        android:id="@+id/service_of_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/my_service">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/review_bg">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/reviews"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/other_bg">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/customer_service"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:background="@drawable/other_bg">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/question"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:background="@drawable/other_bg">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/member_card"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/service_of_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/service_of_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="My Review"
            android:textAppearance="@style/my_wishlist"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:text="Chat with \nCustomer care"
            android:textAppearance="@style/follwed_sto"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Help"
            android:textAppearance="@style/recently_vi"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Membership"
            android:textAppearance="@style/voucher"
            />



    </LinearLayout>




</RelativeLayout>