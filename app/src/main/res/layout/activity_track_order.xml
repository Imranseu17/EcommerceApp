<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="trackOrderActivity"
            type="com.kcsl.ecommerce.activities.TrackOrderActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        tools:context=".activities.ItemDetailsActivity">

        <RelativeLayout
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/calibri"
                android:text="Track Order"
                android:textSize="20dp"
                android:textAppearance="@style/explores_wo_flash"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_outline_notifications_24" />

        </RelativeLayout>

              <ImageView
                  android:id="@+id/done_icon"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/done_image"
                  android:layout_below="@id/rectangle_3"
                  android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/thanks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/done_icon"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/calibri"
            android:text="Thanks for Order"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/track_order_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/thanks_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/done_icon"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/calibri"
                android:text="Track Order"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/done_icon"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/calibri"
                android:text="Order ID - \n#BE12345"
                android:textColor="#606A7B"
                android:textSize="16dp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/track_order_properties_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/track_order_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/track_order_icon"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/order_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/calibri"
                            android:text="Order Placed"
                            android:textColor="#606A7B"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/calibri"
                            android:text="Order#123455 from Fashion Point"
                            android:textColor="#606A7B"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/date_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/calibri"
                        android:text="05/8/2022\n11:10 AM"
                        android:textColor="#606A7B"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/payment_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/calibri"
                            android:text="Payment Confirmed"
                            android:textColor="#606A7B"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/calibri"
                            android:text="Payment Confirmed Status"
                            android:textColor="#606A7B"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/date_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/calibri"
                        android:text="05/08/2022\n11:10 AM"
                        android:textColor="#606A7B"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/processed_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/calibri"
                            android:text="Processed"
                            android:textColor="#606A7B"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/calibri"
                            android:text="Processed Status"
                            android:textColor="#606A7B"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/date_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginStart="100dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/calibri"
                        android:text="05/08/2022\n11:10 AM"
                        android:textColor="#606A7B"
                        android:textSize="18dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/delivered_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/calibri"
                            android:text="Delivered"
                            android:textColor="#606A7B"
                            android:textSize="18dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:fontFamily="@font/calibri"
                            android:text="Delivered Status"
                            android:textColor="#606A7B"
                            android:textSize="18dp" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/date_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginStart="@dimen/_100sdp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/calibri"
                        android:text="05/08/2022\n11:10 AM"
                        android:textColor="#606A7B"
                        android:textSize="18dp" />

                </LinearLayout>





            </LinearLayout>






        </LinearLayout>



                <TextView
                    android:id="@+id/shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/track_order_properties_layout"
                    android:gravity="top"
                    android:text="@string/shipping"
                    android:textAppearance="@style/shipping" />

                <LinearLayout
                    android:id="@+id/add_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_address_bg"
                    android:layout_below="@+id/shipping"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rectangle_3"
                            android:layout_marginStart="20dp"
                            android:text="Imtiaj Alam \n imtiajalam72@mail.com \n +88 01625 669403"
                            android:textAppearance="@style/shipping"
                            android:gravity="top"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rectangle_3"
                            android:layout_marginStart="20dp"
                            android:text="Taltola Reazbag khilgong Dhaka \nBangladesh"
                            android:textAppearance="@style/shipping"
                            android:gravity="top"
                            />




                    </LinearLayout>



                </LinearLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/back_layout"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="Back to home"
                android:textAppearance="@style/shipping"
                android:textColor="@color/black" />


        </androidx.appcompat.widget.LinearLayoutCompat>


            </RelativeLayout>





</layout>
