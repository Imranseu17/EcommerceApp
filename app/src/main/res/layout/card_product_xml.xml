<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/based_on_background"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/based_on_image_bg">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nike_air_max" />



    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:textAppearance="@style/developer"
            android:text="Nike Air Zoom pegasus"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_sub_name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="36 Miami"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





        </LinearLayout>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/ghc_549_00"
            android:textAppearance="@style/ghc_549_00"
            android:gravity="top"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/love_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/love"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/delete_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/delete_icon"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="end">

            <LinearLayout
                android:id="@+id/min_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:background="@drawable/min_bg"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/ic_baseline_minimize_24"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:background="@drawable/min_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/max_bg"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_add_24"/>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>