<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="addAddressActivity"
            type="com.kcsl.ecommerce.activities.AddAddressActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        tools:context=".activities.ItemDetailsActivity">

        <RelativeLayout
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/calibri"
                android:text="Add Address"
                android:textAppearance="@style/explores_wo_flash"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_outline_notifications_24" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_product_box">

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/search_vector"/>

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/personal_de"
                    android:textAppearance="@style/personal_de"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_outline_camera_alt_24"/>

            </RelativeLayout>


        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rectangle_3"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="top"
                    android:text="@string/required_fi"
                    android:textAppearance="@style/required_fi" />

                <LinearLayout
                    android:id="@+id/recipents_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/required"
                    android:layout_marginStart="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/recipents">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/calibri"
                            android:textStyle="bold"
                            android:layout_marginTop="3dp"
                            android:textSize="20dp"
                            android:text="@string/some_id_recipents"
                            android:textAppearance="@style/some_id_recipents"
                            />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/some_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="15dp"
                        android:text="@string/recipents_i"
                        android:textAppearance="@style/recipents_i"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/nameEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/recipents_layout"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_box"
                    android:drawableRight="@null"
                    android:fontFamily="@font/calibri"
                    android:hint="Name and Surname*"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/nameEt">

                    <EditText
                        android:id="@+id/codeEt"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/dp16"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/password_box"
                        android:drawableLeft="@drawable/bangladesh_icon"
                        android:drawableRight="@null"
                        android:fontFamily="@font/calibri"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:paddingLeft="30dp"
                        android:paddingRight="20dp"
                        android:text="+880"
                        android:textAlignment="center"
                        android:textColor="@color/mainText"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/numberEt"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/password_box"
                        android:fontFamily="@font/calibri"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_10sdp"
                        android:hint="Phone Number*"
                        android:textAlignment="center"
                        android:textColor="@color/mainText"
                        android:textSize="15sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/related_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_layout"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="For shipping related questions only."
                    android:textAppearance="@style/required_fi"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/emailEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/related_question"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_box"
                    android:drawableRight="@null"
                    android:fontFamily="@font/calibri"
                    android:hint="E-mail Address"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailEt"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="This address will be used to send you order and bill details."
                    android:textAppearance="@style/required_fi"
                    android:textSize="14dp" />

                <LinearLayout
                    android:id="@+id/shipping_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/details_text"
                    android:layout_marginStart="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/recipents">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/calibri"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="2"
                            android:textAppearance="@style/some_id_recipents"
                            />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="15dp"
                        android:text="Shipping Address"
                        android:textAppearance="@style/recipents_i"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/addressTitleEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/shipping_address_layout"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_box"
                    android:drawableRight="@null"
                    android:fontFamily="@font/calibri"
                    android:hint="Address Title(Optional)"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/estimating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressTitleEt"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="For estimating if the place is opened or closed on the weekends."
                    android:textAppearance="@style/required_fi"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/addressEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/estimating_text"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_box"
                    android:drawableRight="@drawable/auto_detect"
                    android:fontFamily="@font/calibri"
                    android:hint="Address* \n Street, apartment name etc."
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />
                
                <LinearLayout
                    android:id="@+id/street_address_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/addressEt"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/add_address_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addressTitleEt"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/red"
                        android:text="Street Address 2 (Optional)"
                        android:textAppearance="@style/required_fi"
                        android:textSize="14dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/cityEt"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/street_address_text"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_box"
                    android:drawableRight="@drawable/more_vector_icon"
                    android:fontFamily="@font/calibri"
                    android:hint="City"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/cityEt"
                    android:layout_marginStart="@dimen/dp16"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/password_box"
                    android:drawableRight="@drawable/more_vector_icon"
                    android:fontFamily="@font/calibri"
                    android:hint="Country"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="@dimen/_10sdp"
                    android:paddingLeft="30dp"
                    android:paddingRight="20dp"
                    android:textAlignment="center"
                    android:textColor="@color/mainText"
                    android:textSize="15sp" />

                <LinearLayout
                    android:id="@+id/billing_address_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@+id/country"
                    android:layout_marginStart="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:background="@drawable/recipents">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/calibri"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:text="3"
                            android:textAppearance="@style/some_id_recipents"
                            />


                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/calibri"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:layout_marginStart="15dp"
                        android:text="Billing Address"
                        android:textAppearance="@style/recipents_i"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/billing_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/billing_address_layout"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/calibri"
                    android:text="Billing Address*"
                    android:textAppearance="@style/recipents_i"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/delivery_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/billing_address_text">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/checked"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/calibri"
                        android:text="Same as delivery address."
                        android:textAppearance="@style/recipents_i"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/billing_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delivery_text"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/calibri"
                    android:text="Billing Type*"
                    android:textAppearance="@style/recipents_i"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/box_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="25dp"
                    android:layout_marginEnd="25dp"
                    android:layout_below="@id/billing_type">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ellipse_checked"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/calibri"
                        android:text="Personal"
                        android:textAppearance="@style/recipents_i"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_100sdp"
                        android:src="@drawable/ellipse_unchecked"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:fontFamily="@font/calibri"
                        android:text="Commercial"
                        android:textAppearance="@style/recipents_i"
                        android:textSize="16dp"
                        android:textStyle="bold" />



                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_below="@id/box_layout">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical"
                        android:background="@drawable/cancel_btn_bg">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/calibri"
                            android:text="Cancel"
                            android:textAppearance="@style/recipents_i"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/save_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical"
                        android:background="@drawable/save_button_backgroud">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:fontFamily="@font/calibri"
                            android:text="Save"
                            android:textColor="@color/white"
                            android:textAppearance="@style/recipents_i"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>



            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

</layout>
