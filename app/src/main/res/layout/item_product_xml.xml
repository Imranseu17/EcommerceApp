<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/based_on_background"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/based_on_image_bg">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/nike_air_max" />



    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_name"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:textAppearance="@style/developer"
            android:text="Nike Air Zoom pegasus"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Color:Blue"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:textSize="14sp"
                android:textColor="#868E96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Size:37"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:textSize="14sp"
                android:textColor="#868E96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Qty:1"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:textSize="14sp"
                android:textColor="#868E96"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>





        </LinearLayout>





    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discount_us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="BDT 67"
            android:textAppearance="@style/discount_us"
            />

    </RelativeLayout>

</LinearLayout>