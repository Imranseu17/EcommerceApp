<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="90dp"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/tranding_bg"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="60dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_height="match_parent"
        android:background="@drawable/trading_product_bg">

        <ImageView
            android:id="@+id/workspace_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/workspace_computer" />


    </RelativeLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workspaceName"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:textAppearance="@style/developer"
            android:text="@string/developer"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/workspace_suggestion"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:textAppearance="@style/suggested_i"
            android:text="@string/suggested_i"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:maxLines="2"
            android:textSize="12sp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>