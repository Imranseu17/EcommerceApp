<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:background="@drawable/tranding_bg"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/trading_product_bg"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp">

        <ImageView
            android:id="@+id/tranding_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_watch"/>


    </RelativeLayout>


    <TextView
        android:id="@+id/trandingName"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:textAppearance="@style/smart_watch"
        android:text="@string/smart_watch"
        android:textStyle="bold"
        android:fontFamily="@font/calibri"
        android:maxLines="2"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <TextView
            android:textAllCaps="false"
            android:textStyle="bold"
            android:fontFamily="@font/calibri"
            android:textAppearance="@style/see_collect"
            android:text="@string/see_collect"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</LinearLayout>