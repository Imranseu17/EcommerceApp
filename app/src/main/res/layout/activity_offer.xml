<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="offerActivity"
            type="com.kcsl.ecommerce.activities.OfferActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        tools:context=".activities.ItemDetailsActivity">

        <RelativeLayout
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/calibri"
                android:text="Offer"
                android:textAppearance="@style/explores_wo_flash"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_outline_notifications_24" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_product_box">

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/search_vector"/>

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/personal_de"
                    android:textAppearance="@style/personal_de"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_outline_camera_alt_24"/>

            </RelativeLayout>



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bestTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rectangle_3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/notification_item_bg"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/flash_sell_image_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/flash_cell_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/nike_air_max" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/bestTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="The Best Title"
                    android:textAppearance="@style/offer"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/culpa_cillu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nike Air Zoom Pegasus 36 Miami - Special For your Activity"
                android:textAppearance="@style/culpa_cillu"
                android:layout_marginStart="40dp"
                android:textSize="@dimen/dp16"
                android:layout_marginEnd="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="April 30, 2022 1:01 PM"
                android:textColor="#223263"
                android:textAppearance="@style/culpa_cillu"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="@dimen/_10sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/feed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/bestTitleLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/notification_item_bg"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_layout_one"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/flash_sell_image_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/flash_cell_image_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/new_nike_air" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/fed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="SUMMER OFFER 98% Cashback"
                    android:textAppearance="@style/offer"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/culpa_cillu_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nike Air Zoom Pegasus 36 Miami - Special For your Activity"
                android:textAppearance="@style/culpa_cillu"
                android:layout_marginStart="40dp"
                android:textSize="@dimen/dp16"
                android:layout_marginEnd="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/date_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="April 30, 2022 1:01 PM"
                android:textColor="#223263"
                android:textAppearance="@style/culpa_cillu"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="@dimen/_10sdp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/feed_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/notification_item_bg"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/relative_layout_two"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/flash_sell_image_bg"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/flash_cell_image_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/nike_air_max" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/activity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/calibri"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Special Offer 25% OFF"
                    android:textAppearance="@style/offer"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/culpa_cillu_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nike Air Zoom Pegasus 36 Miami - Special For your Activity"
                android:textAppearance="@style/culpa_cillu"
                android:layout_marginStart="40dp"
                android:textSize="@dimen/dp16"
                android:layout_marginEnd="@dimen/_10sdp"
                />

            <TextView
                android:id="@+id/date_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="April 30, 2022 1:01 PM"
                android:textColor="#223263"
                android:textAppearance="@style/culpa_cillu"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="@dimen/_10sdp"
                />

        </LinearLayout>

    </RelativeLayout>

</layout>
