<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ProductDetailsActivity"
            type="com.kcsl.ecommerce.activities.ProductDetailsActivity" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5E8E8"
        tools:context=".activity.LoginActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:orientation="vertical"
            android:weightSum="100"
            card_view:cardElevation="1dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/roundedbutton"
                card_view:cardBackgroundColor="@android:color/white"
                android:paddingBottom="@dimen/padding_10"
                android:layout_gravity="bottom"
                card_view:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:background="@android:color/white">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/finish_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        card_view:srcCompat="@drawable/ic_baseline_arrow_back_ios_24"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="  Product Details"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">


                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="1dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/imageCard"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                card_view:cardBackgroundColor="#EBF5FB"
                                card_view:cardElevation="1dp"
                                card_view:cardCornerRadius="@dimen/padding_10">



                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">


                                        <androidx.appcompat.widget.AppCompatImageView
                                            android:id="@+id/productImage"
                                            android:layout_width="150dp"
                                            android:background="@android:color/white"
                                            android:layout_height="150dp"
                                            android:layout_marginStart="80dp"
                                            card_view:civ_border_color="#f0f4f5"
                                            card_view:civ_border_width="1dp"
                                            android:layout_marginBottom="@dimen/padding_10"
                                            android:src="@drawable/profile_image"/>


                                        <LinearLayout
                                            android:id="@+id/favoriteImage"
                                            android:layout_width="50dp"
                                            android:layout_gravity="bottom"
                                            android:background="@drawable/circular_boder"
                                            android:layout_marginStart="40dp"
                                            android:layout_height="50dp"
                                            android:gravity="center"
                                            card_view:civ_border_color="#f0f4f5"
                                            card_view:civ_border_width="1dp">


                                            <androidx.appcompat.widget.AppCompatImageView
                                                android:layout_width="40dp"
                                                android:layout_height="40dp"
                                                android:layout_marginTop="@dimen/padding_10"
                                                android:layout_gravity="center"
                                                android:layout_marginBottom="@dimen/padding_10"
                                                card_view:srcCompat="@drawable/ic_baseline_favorite_border_24"/>


                                        </LinearLayout>


                                    </LinearLayout>


                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="150dp"
                                        android:layout_height="10dp"
                                        card_view:civ_border_color="#f0f4f5"
                                        card_view:civ_border_width="1dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/blue"/>


                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="@drawable/rectanglebg"
                                android:layout_marginTop="@dimen/padding_10"
                                android:layout_gravity="center">


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/smallImage"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    card_view:civ_border_color="#3F51B5"
                                    card_view:civ_border_width="1dp"
                                    android:layout_marginBottom="@dimen/padding_10"
                                    android:src="@drawable/profile_image"/>

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="@dimen/padding_10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">




                                <TextView
                                    android:id="@+id/price1"
                                    android:gravity="center"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$100.00 - $106.00"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#3F51B5"
                                    card_view:layout_constraintStart_toStartOf="parent"
                                    card_view:layout_constraintTop_toTopOf="parent"/>


                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/share"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    card_view:civ_border_color="#3F51B5"
                                    card_view:civ_border_width="1dp"
                                    android:layout_marginTop="@dimen/padding_10"
                                    android:layout_marginEnd="@dimen/padding_10"
                                    card_view:srcCompat="@drawable/ic_baseline_share_24"
                                    card_view:layout_constraintEnd_toEndOf="parent"
                                    card_view:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/price2"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/line"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:textColor="#CCD1D1"/>

                                <TextView
                                    android:id="@+id/name"
                                    android:gravity="center"
                                    android:layout_marginTop="2dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Red T-shirt"
                                    android:layout_marginStart="10dp"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="#000000"/>


                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="3dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    card_view:layout_constraintStart_toStartOf="parent"
                                    card_view:layout_constraintTop_toTopOf="parent">


                                    <TextView
                                        android:id="@+id/quentity"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.0"
                                        android:layout_marginStart="10dp"
                                        android:textSize="18sp"
                                        android:textColor="#CCD1D1" />


                                    <RatingBar
                                        android:id="@+id/rating"
                                        android:layout_marginStart="@dimen/padding_10"
                                        android:layout_gravity="center"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:isIndicator="true"
                                        android:numStars="5"
                                        android:stepSize="0.5" />

                                </androidx.appcompat.widget.LinearLayoutCompat>


                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    card_view:layout_constraintEnd_toEndOf="parent"
                                    card_view:layout_constraintTop_toTopOf="parent">


                                    <TextView
                                        android:id="@+id/reviewsCount"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 reviews |"
                                        android:layout_marginStart="10dp"
                                        android:textSize="12sp"
                                        android:textColor="#CCD1D1" />


                                    <TextView
                                        android:id="@+id/ordersCount"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 orders |"
                                        android:layout_marginStart="10dp"
                                        android:textSize="12sp"
                                        android:textColor="#CCD1D1" />

                                    <TextView
                                        android:id="@+id/wishCount"
                                        android:gravity="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0 wish"
                                        android:layout_marginStart="10dp"
                                        android:textSize="12sp"
                                        android:textColor="#CCD1D1" />




                                </androidx.appcompat.widget.LinearLayoutCompat>







                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#F1F2F3" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Seller"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginTop="40dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">




                            <TextView
                                android:id="@+id/sellerName"
                                android:gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Karim K"
                                android:layout_marginStart="10dp"
                                android:textSize="18sp"
                                android:textColor="#3F51B5"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent"/>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/comments"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                card_view:civ_border_color="#3F51B5"
                                card_view:civ_border_width="1dp"
                                android:layout_marginEnd="@dimen/padding_10"
                                android:layout_marginTop="@dimen/padding_10"
                                card_view:srcCompat="@drawable/ic_baseline_message_24"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:text="Quantity :"
                            android:layout_marginTop="100dp" />



                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_gravity="bottom|end"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/quentity_background">


                            <ImageView
                                android:id="@+id/add"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_baseline_add_24"/>


                            <TextView
                                android:id="@+id/value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:text="1"
                                android:textSize="14sp"/>



                            <ImageView
                                android:id="@+id/min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="3dp"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:srcCompat="@drawable/ic_baseline_minimize_24"/>








                        </androidx.appcompat.widget.LinearLayoutCompat>





                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#F1F2F3" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="1dp">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Specification"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent"/>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/specificationArrow"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                card_view:civ_border_color="#3F51B5"
                                android:layout_marginTop="5dp"
                                card_view:civ_border_width="1dp"
                                card_view:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Red t shirt and black t shirt Red t shirt and black t shirt Red t shirt and black t shirt Red t shirt and black t shirt"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="50dp"
                            android:textSize="14dp"
                            android:textColor="#000000"/>



                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#F1F2F3" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="10dp">





                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/totalReviews"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reviews(0)"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="18dp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent"/>


                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/reviewsArrow"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                card_view:civ_border_color="#3F51B5"
                                android:layout_marginTop="5dp"
                                card_view:civ_border_width="1dp"
                                card_view:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                                card_view:layout_constraintEnd_toEndOf="parent"
                                card_view:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <View
                            android:id="@+id/margin2"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="50dp"
                            android:background="#F1F2F3" />


                        <TextView
                            android:id="@+id/reviewComment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="No Review"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="70dp"
                            android:textSize="18dp"
                            android:textColor="#000000"/>



                    </androidx.cardview.widget.CardView>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="#F1F2F3" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardElevation="1dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Related Products"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">




                            <LinearLayout
                                android:layout_marginTop="30dp"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBottomNav"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:background="@drawable/prodct_display_border"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/productSmallImage"
                                        android:layout_width="160dp"
                                        android:layout_height="130dp"
                                        tools:ignore="ContentDescription" />

                                </LinearLayout>

                                <RatingBar
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/productRating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:stepSize="0.5" />
                                <TextView
                                    android:id="@+id/productName"
                                    android:layout_marginTop="5dp"
                                    android:text="simple product"
                                    android:maxLines="2"
                                    android:textSize="12sp"
                                    android:ellipsize="end"
                                    android:layout_width="80dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/productPrice"
                                    android:layout_marginTop="10dp"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"
                                    android:text="$22220.00"
                                    android:maxLines="2"
                                    android:textSize="16sp"
                                    android:layout_width="90dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"/>



                            </LinearLayout>
                            <LinearLayout
                                android:layout_marginTop="30dp"
                                android:layout_width="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_height="wrap_content"
                                android:background="@color/colorBottomNav"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:background="@drawable/prodct_display_border"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:id="@+id/productSmallImage1"
                                        android:layout_width="160dp"
                                        android:layout_height="130dp"
                                        tools:ignore="ContentDescription" />

                                </LinearLayout>

                                <RatingBar
                                    android:layout_marginTop="5dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/productRating1"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:stepSize="0.5" />
                                <TextView
                                    android:id="@+id/productName1"
                                    android:layout_marginTop="5dp"
                                    android:text="simple product"
                                    android:maxLines="2"
                                    android:textSize="12sp"
                                    android:ellipsize="end"
                                    android:layout_width="80dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:id="@+id/productPrice1"
                                    android:layout_marginTop="10dp"
                                    android:textAllCaps="true"
                                    android:textStyle="bold"
                                    android:text="$22220.00"
                                    android:maxLines="2"
                                    android:textSize="16sp"
                                    android:layout_width="90dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:layout_height="wrap_content"/>



                            </LinearLayout>
                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </ScrollView>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="@color/white"
            card_view:cardBackgroundColor="@android:color/white"
            android:paddingBottom="@dimen/padding_10"
            android:layout_gravity="bottom"
            card_view:cardElevation="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding_10">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/shoppingCount"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    card_view:civ_border_color="#3F51B5"
                    card_view:civ_border_width="1dp"
                    android:layout_marginStart="@dimen/padding_10"
                    android:layout_marginBottom="@dimen/padding_10"
                    card_view:srcCompat="@drawable/ic_outline_shopping_cart_24"/>

                <LinearLayout
                    android:id="@+id/buyNow"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/padding_10"
                    android:background="@drawable/roundedbutton"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
