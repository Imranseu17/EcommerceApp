<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="flashCellActivity"
            type="com.kcsl.ecommerce.activities.FlashSellActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_background"
        tools:context=".activities.FlashSellActivity">

        <RelativeLayout
            android:id="@+id/rectangle_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp">
                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/calibri"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="@string/explores_wo_flash"
                android:textAppearance="@style/explores_wo_flash"
                />


            <ImageView
                android:id="@+id/notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_outline_notifications_24" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/title"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/search_product_box">

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/search_vector"/>

                <TextView
                    android:id="@+id/search_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/personal_de"
                    android:textAppearance="@style/personal_de"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_outline_camera_alt_24"/>

            </RelativeLayout>



        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_below="@+id/rectangle_3"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/flash_cell_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="30dp">


                    <LinearLayout
                        android:id="@+id/sort_by_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/flash_cell_bg_item">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/sort_by_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/tradly"
                            android:textAppearance="@style/tradly"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/flash_cell_bg_item">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_location_on_24"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Location"
                            android:textAppearance="@style/tradly"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/flash_cell_bg_item">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_baseline_format_list_bulleted_24"/>

                        <TextView
                            android:id="@+id/sort_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Filter"
                            android:textAppearance="@style/tradly"
                            />



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flash_cell_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flash_cell_item"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:background="@drawable/flash_sell_bg">

                    <TextView
                        android:id="@+id/super_flash_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="32dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/calibri"
                        android:text="@string/title"
                        android:textAppearance="@style/title"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="30dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/flash_cell_time_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/flash_time_one"
                                    android:layout_gravity="center"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/calibri"
                                    android:text="@string/some_id_time"
                                    android:textAppearance="@style/some_id_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/some_id_time_dot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/some_id_time_dot"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="2dp"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/calibri"
                                android:textAppearance="@style/some_id_time_dot"
                                />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:background="@drawable/flash_cell_time_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/flash_time_two"
                                    android:layout_gravity="center"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/calibri"
                                    android:text="@string/some_id_time_one"
                                    android:textAppearance="@style/some_id_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/some_id_time_dot_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/some_id_time_dot"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="2dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:fontFamily="@font/calibri"
                                android:textAppearance="@style/some_id_time_dot"
                                />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:background="@drawable/flash_cell_time_bg"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/flash_time_three"
                                    android:layout_gravity="center"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/calibri"
                                    android:text="@string/some_id_time_two"
                                    android:textAppearance="@style/some_id_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>




                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_design_list_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flash_cell_offer"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_design_list_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_design_list_one"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_design_list_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_design_list_two"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_design_list_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_design_list_three"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>
</layout>
