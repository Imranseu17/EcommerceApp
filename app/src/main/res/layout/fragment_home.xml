<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="40dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<androidx.core.widget.NestedScrollView
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.home.HomeFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_title_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_title_list"
            android:layout_margin="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_list_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_list"
            android:layout_margin="5dp" />



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/banner_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_list_more"
            android:layout_margin="5dp" />

        <LinearLayout
            android:id="@+id/category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/banner_list"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category_title_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:text="@string/category"
                android:textAppearance="@style/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/category_title_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textAppearance="@style/see_all"
                    android:textSize="14sp"
                    android:fontFamily="@font/calibri" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/sell_all_vector"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_category_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_title"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_category_list_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_category_list"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="7dp" />

        <LinearLayout
            android:id="@+id/gift_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_category_list_more"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gift_title_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:text="@string/new_user_fr"
                android:textAppearance="@style/new_user_fr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/gift_title_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textAppearance="@style/see_all"
                    android:textSize="14sp"
                    android:fontFamily="@font/calibri" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/sell_all_vector"/>

            </LinearLayout>




        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/gift_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gift_title"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/adjustable_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gift_list"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/flash_cell_data"
            android:layout_below="@+id/adjustable_list"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/flash_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flash_title_text"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/calibri"
                    android:text="@string/flash_sell"
                    android:textAppearance="@style/flash_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="@drawable/flash_cell_time_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/flash_time_one"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/calibri"
                            android:text="@string/some_id_time"
                            android:textAppearance="@style/some_id_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/some_id_time_dot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/some_id_time_dot"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/calibri"
                        android:textAppearance="@style/some_id_time_dot"
                        />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/flash_cell_time_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/flash_time_two"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/calibri"
                            android:text="@string/some_id_time_one"
                            android:textAppearance="@style/some_id_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/some_id_time_dot_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/some_id_time_dot"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="2dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/calibri"
                        android:textAppearance="@style/some_id_time_dot"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/flash_cell_time_bg"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/flash_time_three"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/calibri"
                            android:text="@string/some_id_time_two"
                            android:textAppearance="@style/some_id_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/flash_title_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="end|center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textAppearance="@style/see_all"
                        android:textSize="14sp"
                        android:fontFamily="@font/calibri" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/sell_all_vector"/>

                </LinearLayout>





            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/flash_cell_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/trending_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flash_cell_data"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/trending_title_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:text="@string/trending"
                android:textAppearance="@style/trending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/trending_title_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textAppearance="@style/see_all"
                    android:textSize="14sp"
                    android:fontFamily="@font/calibri" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/sell_all_vector"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/trending_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trending_title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:id="@+id/workspace_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trending_list"
            android:layout_marginTop="@dimen/padding_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/workspace_title_text"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/calibri"
                android:text="@string/workspaces"
                android:textAppearance="@style/workspaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/workspace_title_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:gravity="end|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_all"
                    android:textAppearance="@style/see_all"
                    android:textSize="14sp"
                    android:fontFamily="@font/calibri" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/sell_all_vector"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workspace_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workspace_title"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/extra_categories_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/extra_categories_bg"
            android:layout_below="@+id/workspace_list"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_design_list_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extra_categories_list"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_design_list_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_design_list_one"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_design_list_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_design_list_two"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/product_design_list_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_design_list_three"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:id="@+id/flash_cell"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/product_design_list_four"
            android:background="@drawable/custom_border"
            android:backgroundTint="@color/colorError"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:weightSum="100"
            tools:targetApi="lollipop">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:background="@drawable/layout" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFlash"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/newProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flash_cell"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/newProductText"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:fontFamily="@font/calibri"
            android:text="@string/new_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>


        <TextView
            android:id="@+id/newAllProduct"
            android:gravity="end|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="View All"
            android:textSize="12sp"
            android:fontFamily="@font/calibri"
            android:textColor="@color/colorBottomNavItemChecked"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </LinearLayout>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
           android:layout_below="@+id/newProducts"
            shimmer:duration="800">

            <!-- 3 rows added as a placeholders -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include layout="@layout/shimmer_number_of_product_display" />
                    <include layout="@layout/shimmer_number_of_product_display" />
                    <include layout="@layout/shimmer_number_of_product_display" />

                </LinearLayout>



            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/new_products_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:visibility="gone"
           android:layout_below="@+id/newProducts"/>


        <LinearLayout
        android:id="@+id/featuredProductText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_below="@+id/new_products_list">

        <TextView
            android:id="@+id/textfeatured"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:text="@string/featured_products"
            android:fontFamily="@font/calibri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />


       <TextView
           android:id="@+id/featuredAllProduct"
           android:gravity="end|center"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:fontFamily="@font/calibri"
           android:text="View All"
            android:textSize="12sp"
           android:layout_marginTop="8dp"
           android:textColor="@color/colorBottomNavItemChecked"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
           app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

    </LinearLayout>




        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featured_products_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="@dimen/_8sdp"
            android:layout_below="@+id/featuredProductText"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/featured_products_list"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/cart_rectangle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_shopping_cart_24"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp">

                <TextView
                    android:id="@+id/some_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/some_id_cart_price"
                    android:textAppearance="@style/some_id_cart_price"
                    />

                <TextView
                    android:id="@+id/some_id_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/items"
                    android:textAppearance="@style/items"
                    />


            </LinearLayout>



        </LinearLayout>



    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>