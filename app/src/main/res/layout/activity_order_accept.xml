<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="orderAcceptActivity"
            type="com.kcsl.ecommerce.activities.OrderAcceptActivity" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mask_background"
        tools:context=".activities.ItemDetailsActivity">



        <ImageView
            android:id="@+id/order_accept_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/order_accept_group"
           android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_100sdp"/>

        <TextView
            android:id="@+id/accepted_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_accept_image"
            android:layout_centerInParent="true"
            android:fontFamily="@font/calibri"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_10sdp"
            android:text=" Your Order has been \n           accepted"
            android:textColor="@color/black"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/accepted_text"
            android:layout_centerInParent="true"
            android:fontFamily="@font/calibri"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Your items has been placcd and is on \n       it's way to being processed"
            android:textColor="#7C7C7C"
            android:textSize="18dp" />



        <LinearLayout
            android:id="@+id/track_order_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="90dp"
            android:background="@drawable/track_order_rectangle"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:layout_centerInParent="true"
                android:fontFamily="@font/calibri"
                android:text="Track Order"
                android:textColor="@color/white"
                android:textSize="20dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/calibri"
            android:text="Back to home"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />



    </RelativeLayout>

</layout>
